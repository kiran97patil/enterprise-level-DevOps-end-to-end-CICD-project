pipeline {
    agent any
    
    tools {
        maven 'Maven-3'
    }

    environment {
        SONAR_PROJECT_KEY  = 'devops-masterpiece'              // yahan apna Sonar project key
        SONAR_PROJECT_NAME = 'DevOps MasterPiece CI with Jenkins'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube-server') {
                    sh """
                      mvn sonar:sonar \
                        -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                        -Dsonar.projectName=${SONAR_PROJECT_NAME}
                    """
                }
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t insure-me:jenkins .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                    docker stop insure-me-app || true
                    docker rm insure-me-app || true
                    docker run -d --name insure-me-app -p 8081:8081 insure-me:jenkins
                '''
            }
        }
    }
}
